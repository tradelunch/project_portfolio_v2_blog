{
    "name": "dashboard_server",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
        "dev:nodemon": "cross-env NODE_ENV=development nodemon",
        "build": "tsc && tsc-alias",
        "start": "node dist/index.js",
        "prod": "cross-env NODE_ENV=production yarn build && pm2 start dist/index.js --name tradelunch",
        "status": "pm2 ps && pm2 status",
        "logs": "pm2 logs",
        "stop": "pm2 kill",
        "read": "ts-node -r tsconfig-paths/register --compiler-options \"{\\\"module\\\":\\\"CommonJS\\\"}\"",
        "test": "cross-env NODE_ENV=test jest",
        "test:watch": "cross-env NODE_ENV=test jest --watch",
        "test:coverage": "cross-env NODE_ENV=test jest --coverage",
        "test:verbose": "cross-env NODE_ENV=test jest --verbose",
        "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=utils",
        "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=routes"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.913.0",
        "@aws-sdk/s3-request-presigner": "^3.913.0",
        "@repo/markdown-parsing": "*",
        "@theinternetfolks/snowflake": "^1.3.0",
        "cross-env": "^10.1.0",
        "express": "^5.1.0",
        "gray-matter": "^4.0.3",
        "highlight.js": "^11.11.1",
        "mime-types": "^3.0.1",
        "pg": "^8.16.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.7",
        "snowflake-id": "^1.1.0",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/mime-types": "^3.0.1",
        "@types/node": "^24.9.2",
        "nodemon": "^3.1.10",
        "pm2": "^6.0.13",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.6"
    }
}
