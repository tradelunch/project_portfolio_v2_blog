{
	"extends": "@repo/typescript-config/node-library.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@": ["."],
			"@/*": ["./*"]
		}
	},
	"include": [
		"src/**/*",
		"types/**/*",
		"**/*.d.ts",
		"lib",
		"modules",
		"scripts"
	],
	"exclude": ["node_modules"]
}
