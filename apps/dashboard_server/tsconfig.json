{
    "extends": "@repo/typescript-config/node-library.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@": ["."],
            "@/*": ["./*"]
        },
        "typeRoots": ["node_modules/@types", "types"]
    },
    "include": [
        "src/utils/**/*",
        "src/**/*",
        "types/**/*",
        "types/global.d.ts",
        "**/*.d.ts",
        "**/lib/*",
        "scripts",
        "config"
    ],
    "exclude": ["node_modules", "dist", "coverage"]
}

