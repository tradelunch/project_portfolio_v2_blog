{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@": ["."],
            "@/*": ["./*"],
            "@/compoents/*": ["./components/*"],
            "@/hooks/*": ["./hooks/*"],
            "@/styles/*": ["./styles/*"],
            "@/types/*": ["./types/*"],
            "@/lib/*": ["./lib/*"],
            "@/utils/*": ["./utils/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/types/*.ts"
    ],
    "exclude": ["node_modules", "__backup__"]
}
