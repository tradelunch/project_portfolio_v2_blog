{
    "extends": "@repo/typescript-config/node-library.json",
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "moduleResolution": "Node", // Jest 호환
        "target": "ES2022",
        "declaration": true,
        "declarationMap": true, // 타입 정의 디버깅 지원
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDirs": [".", "src"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"] // src 디렉토리 내부로 제한
        },
        "typeRoots": ["types", "node_modules/@types"]
    },
    "include": ["src/**/*.ts", "types/**/*{.ts,.d.ts}", "test/**/*.ts"],
    "exclude": ["node_modules", "__backup__", "dist", "__test__"]
}
