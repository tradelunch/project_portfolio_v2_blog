{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "Bundler", // 번들러 최적화
        "declarationDir": "dist/src", // 타입 정의 출력 위치 명시
        "noEmit": false // Rollup이 직접 emit 처리
    },
    "include": ["src/**/*.ts", "types/**/*.d.ts"],
    "exclude": ["test/**/*", "**/*.spec.ts"]
}
