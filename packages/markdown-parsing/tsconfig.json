{
    "extends": "@repo/typescript-config/node-library.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".", // enable import custom path matching
        "paths": {
            "@/*": ["./*"]
        },
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "declaration": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "include": [
        // "**/types/**/*.{ts,tsx,d.ts}",
        // "types/**/*.{ts,tsx,d.ts}",
        "src/**/*/*.{ts,tsx,d.ts}",
        // "test/**/*.{ts,tsx,d.ts}",
        "src",
        "src/types/**/*.ts"
        // "types"
    ],
    "exclude": ["node_modules", "__backup__", "dist", "**/*.spec.ts"]
}
