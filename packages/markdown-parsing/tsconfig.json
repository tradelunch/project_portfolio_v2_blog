{
	"extends": "@repo/typescript-config/node-library.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src", // maintain root dir src when building
		"baseUrl": ".", // enable import custom path matching
		"paths": {
			"@/*": ["./*"]
		},
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2022",
		"declaration": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": ["types", "node_modules/@types"]
	},
	"include": [
		"types/**/*.d.ts",
		"src/**/*.{ts,tsx,d.ts}",
		"test/**/*.{ts,tsx,d.ts}",
		"src"
	],
	"exclude": ["node_modules", "__backup__", "dist"]
}
